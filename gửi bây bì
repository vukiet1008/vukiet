import tkinter as tk

def anh_nho_em():
    # Tạo cửa sổ chính
    window = tk.Tk()
    window.title("Chúc bây bì ngủ ngon a")
    window.geometry("1000x800")
    
    # Tạo nhãn để hiển thị thông điệp
    message = """
    Bây bì của anh ngủ ngon nha
    Anh yêu bây bì nhiều a
    """
    label = tk.Label(window, text=message, font=("Arial", 45), wraplength=500, justify="center")
    label.pack(expand=True)
    
    # Chạy ứng dụng
    window.mainloop()

# Gọi hàm
anh_nho_em()
